<Page
    x:Class="TravelAgency.Presentation.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TravelAgency.Presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
        <TextBlock Text="Logowanie" FontSize="24" FontWeight="Bold" />

        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBlock Text="Nazwa uzytkownika:" />
            <TextBox x:Name="UsernameTextBox" Width="200" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBlock Text="Haslo:" />
            <PasswordBox x:Name="PasswordBox" Width="200" />
        </StackPanel>

        <Button x:Name="LoginButton" Content="Zaloguj" Click="OnLoginButtonClick" />
    </StackPanel>
</Page>
